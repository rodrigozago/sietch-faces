						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john@example.com\",\n  \"username\": \"johndoe\",\n  \"password\": \"SecurePassword123!\",\n  \"faceImageBase64\": \"data:image/jpeg;base64,/9j/4AAQ...\"\n}",
